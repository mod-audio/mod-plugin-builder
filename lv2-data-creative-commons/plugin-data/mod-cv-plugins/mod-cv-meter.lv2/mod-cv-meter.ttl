@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .

<http://moddevices.com/plugins/mod-devel/mod-cv-meter>
a lv2:Plugin, mod:ControlVoltagePlugin;

    doap:name "CV meter";
    doap:license "GPL v2+" ;

doap:developer [
    foaf:name "Bram Giesen";
    foaf:homepage <>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

doap:maintainer [
    foaf:name "MOD";
    foaf:homepage <http://moddevices.com>;
    ];

    lv2:minorVersion 1;
    lv2:microVersion 0;

rdfs:comment """
The CV Meter displays the value of the current incoming CV signal and the lowest and highest measured value over time.

Features:
Plugin by MOD Devices
""";

lv2:port
[
    a lv2:InputPort, lv2:CVPort;
    lv2:index 0;
    lv2:symbol "CvInput";
    lv2:name "CV input";
],
[
    a lv2:OutputPort, lv2:CVPort;
    lv2:index 1;
    lv2:symbol "CvOutput";
    lv2:name "CV Output";
],
[
	a lv2:ControlPort, lv2:OutputPort ;
	lv2:index 2 ;
	lv2:symbol "min_level" ;
	lv2:name "Min Level" ;
    lv2:default 0.0    ;
	lv2:minimum -100.0 ;
	lv2:maximum 100.0  ;
],
[
	a lv2:ControlPort, lv2:OutputPort ;
	lv2:index 3 ;
	lv2:symbol "max_level" ;
	lv2:name "Max Level" ;
    lv2:default 0.0    ;
	lv2:minimum -100.0 ;
	lv2:maximum 100.0  ;
],
[
	a lv2:ControlPort, lv2:OutputPort ;
	lv2:index 4 ;
	lv2:symbol "level" ;
	lv2:name "Level" ;
    lv2:default 0.0    ;
	lv2:minimum -100.0 ;
	lv2:maximum 100.0  ;
],
[
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 5;
    lv2:symbol "Reset" ;
    lv2:name "Reset" ;
    lv2:portProperty epp:trigger ;
    lv2:portProperty epp:hasStrictBounds ;
    lv2:portProperty lv2:toggled ;
    lv2:default 0.00000 ;
    lv2:minimum 0.00000 ;
    lv2:maximum 1.00000 ;
],
[
     a lv2:InputPort ,
     lv2:ControlPort ;
     lv2:index 6 ;
     lv2:symbol "PluginEnabled" ;
     lv2:name "PluginEnabled" ;
     lv2:default 1.0 ;
     lv2:minimum 0.0 ;
     lv2:maximum 1.0 ;
     lv2:designation lv2:enabled;
     lv2:portProperty lv2:toggled;
]
.
